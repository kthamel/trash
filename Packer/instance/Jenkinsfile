pipeline {
    agent any

    stages {
        stage('packer_version') {
            steps {
                sh 'packer --version' 
            }
        }

        stage('aws_version') {
            steps {
                sh 'aws --version' 
            }
        }

        stage('packer_init') {
            steps {
                dir('Packer/instance'){
                    sh 'packer init .'
                } 
            }
        }

        stage('packer_format') {
            steps {
                dir('Packer/instance'){
                    sh 'packer fmt .'
                }
            }
        }

        stage('packer_validate') {
            steps {
                dir('Packer/instance'){
                    sh 'packer validate .'
                }
            }
        }

        stage('packer_build') {
            steps {
                dir('Packer/instance'){
                    sh 'packer build ami-amazon-linux.pkr.hcl'
                }
            }
        }
    }
}
